# .env.example - copy to .env and populate. DO NOT commit secrets.
# Local/dev: plain env. For production, switch SECRETS_BACKEND to aws-secrets-manager or vault.

# Redis (for caching, rate-limiting, token bucket)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=changeme

# Postgres (snapshots, audit, api_calls ledger)
POSTGRES_URL=postgresql://compliance_user:changeme@postgres:5432/compliance

# External API keys (placeholders)
KVK_API_KEY=your_kvk_api_key_here
OPENSANCTIONS_KEY=your_opensanctions_key_here
SANCTIONS_IO_KEY=your_sanctions_io_key_here
VIES_API_KEY=

# Secrets backend (env | aws-secrets-manager | vault)
SECRETS_BACKEND=env

# Pseudonymization / hashing key (in production: mount from secret)
PII_HASH_KEY=change-me-to-a-strong-secret

# App config
CACHE_TTL_SEARCH=900
CACHE_TTL_PROFILE=86400

# Basic rate-limit (per API key)
RATE_LIMIT_TOKENS=100
RATE_LIMIT_WINDOW_SECONDS=60

# For dev only: comma-separated allowed API keys (production: provision via secrets manager)
API_KEYS_ALLOWED=dev_api_key_1,dev_api_key_2
